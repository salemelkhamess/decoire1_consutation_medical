<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.devoir1_consultaion_medical.presentation.AjoutMedecinController"
      prefWidth="400" prefHeight="300">
    <Label text="Ajouter un Médecin" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Spécialité :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="specialiteField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" fx:id="btnAjouter" onAction="#ajouterMedecin"/>
        <Button text="Annuler" onAction="#fermerFenetre"/>
    </HBox>
</VBox>
